//--------------------------------------------------------------------------------------
// Vertex Shader
//--------------------------------------------------------------------------------------
float4 VS(float4 Pos : POSITION) : SV_POSITION
{
    float3 p = 2.0f * Pos.xyz + float4(-1.2f, -0.2f, 0.0f, 1.0f);
    return float4(p, 1);
}


//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 PS( float4 Pos : SV_POSITION ) : SV_Target
{
    return float4(0.0f, 204.0f, 255.0f, 1.0f);    // Yellow, with Alpha = 1
}
